<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_site_home_layout/page">
  <head>
    <title metal:fill-slot="title">
      Manage Members
      <span tal:replace="view/siteInfo/get_name">A Site</span>
    </title>
    
  </head>
  <body metal:fill-slot="body">
    <h1>
      Manage the Members of 
      <span tal:replace="view/groupInfo/name">this group</span>
    </h1>
    <p>
      This is a list of group members.
    </p>
    <tal:block tal:repeat="status view/statuses">
      <div tal:define="member status/userInfo">
        <h3><span tal:replace="member/name" /></h3> 
        <p tal:condition="status/is_group_admin">
          Group Administrator
        </p>
        <p tal:condition="status/is_normal_member">
          Normal Member
        </p>
      </div>
    </tal:block>
  </body>
</html>

